}

/* DISEÑO RESPONSIVE (Media Queries Ajustadas)  para la pag de artistas     */

/* Media Query para asegurar que 3 columnas se mantengan hasta un ancho de tablet grande */
@media (max-width: 1024px) {
  .tarjeta-artista {
    /* 3 columnas */
    flex: 0 0 calc(33.333% - 20px);
  }
}

/* Para pantallas medianas  */
@media (max-width: 768px) {
  .tarjeta-artista {
    /* 2 columnas */
    flex: 0 0 calc(50% - 20px);
  }
}

/* Para pantallas muy pequeñas  */
@media (max-width: 480px) {
  .tarjeta-artista {
    /* 1 columna */
    flex: 0 0 calc(100% - 20px);
  }
}